<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="HeaderText">
        <item name="android:textSize">@dimen/text_size_header1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TitleText.Bold" parent="TitleText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodyText">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BodyText.Bold" parent="BodyText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CaptionText">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textAppearance">@style/BodyText.Bold</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>